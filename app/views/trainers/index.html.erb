<h1>
Trainers

<%= link_to 'New trainer', new_trainer_path, class: "btn btn-primary" %>
</h1>

<% @trainer.each do |trainer|%>
    <div><%= link_to trainer.first_name , trainer %><%= link_to trainer.last_name, trainer %><p> <%= trainer.description %></p></div>

<% if trainer.cover.attached? %>
<%= cl_image_tag trainer.cover.key, crop: :scale, width: 150, cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>

<% end %>
<% end %>






